<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProgressBar_Horizontal_Web">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:progressDrawable">@drawable/progress_web_load</item>
        <item name="android:minHeight">3dip</item>
        <item name="android:maxHeight">3dip</item>
    </style>
    <!-- 菜单动画 -->
    <style name="main_menu_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_enter</item>
        <item name="android:windowExitAnimation">@anim/menu_exit</item>
    </style>
    <!-- 字体相关 -->
    <style name="font_reg_btn">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="font_share_title">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/font_share_title</item>
    </style>

    <style name="font_share_input_limit">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_share_input_limit</item>
    </style>

    <style name="font_setting_subtitle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/font_setting_subtitle</item>
    </style>

    <style name="font_setting_other_item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/font_setting_other_item</item>
    </style>

</resources>